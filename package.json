{
  "name": "gw2-wiki-dark-mode",
  "displayName": "GW2 Wiki Dark Mode",
  "version": "0.2.1",
  "private": true,
  "packageManager": "pnpm@8.6.10",
  "description": "Enable the wiki's Vector dark theme automatically when loading a page without being logged in.",
  "author": "Noelle L'Amour",
  "scripts": {
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev-firefox": "npm run clear && cross-env NODE_ENV=development EXTENSION=firefox run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:background": "npm run build:background -- --mode development",
    "dev:web": "vite",
    "dev:js": "npm run build:js -- --mode development",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare build:background build:js",
    "build:firefox": "cross-env EXTENSION=firefox NODE_ENV=production run-s clear build:web build:prepare build:background build:js",
    "build:prepare": "esno scripts/prepare.ts",
    "build:background": "vite build --config vite.config.background.ts",
    "build:web": "vite build",
    "build:js": "vite build --config vite.config.content.ts",
    "pack": "cross-env NODE_ENV=production run-p pack:*",
    "pack:zip": "rimraf extension.zip && jszip-cli add extension/* -o ./gw2-wiki-dark.zip",
    "pack:crx": "crx pack extension -o ./gw2-`wiki`-dark.crx",
    "pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build --source-dir ./extension --filename gw2-wiki-dark.xpi --overwrite-dest",
    "firefox:sign": "cd extension && web-ext sign --channel=unlisted --api-key=API_KEY --api-secret=API_SECRET && cd ../",
    "start:chromium": "web-ext run --source-dir ./extension --target=chromium",
    "start:firefox": "web-ext run --source-dir ./extension --target=firefox-desktop",
    "clear": "rimraf --glob extension/dist extension/manifest.json extension.*",
    "lint": "eslint --cache .",
    "test": "vitest test",
    "test:e2e": "playwright test",
    "postinstall": "simple-git-hooks",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.8",
    "@ffflorian/jszip-cli": "^3.4.1",
    "@iconify/json": "^2.2.94",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.4.4",
    "@types/webextension-polyfill": "^0.10.1",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@unocss/reset": "^0.53.6",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/compiler-sfc": "^3.3.4",
    "@vue/test-utils": "^2.4.1",
    "@vueuse/core": "^10.2.1",
    "bumpp": "^9.1.1",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "eslint": "^8.45.0",
    "esno": "^0.17.0",
    "fs-extra": "^11.1.1",
    "kolorist": "^1.8.0",
    "lint-staged": "^13.2.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.1",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.1.6",
    "unocss": "^0.53.6",
    "unplugin-auto-import": "^0.16.6",
    "unplugin-icons": "^0.16.5",
    "unplugin-vue-components": "^0.25.1",
    "vite": "^4.4.7",
    "vue": "^3.3.4",
    "vue-demi": "^0.14.5",
    "web-ext": "^7.6.2",
    "webext-bridge": "^6.0.1",
    "webextension-polyfill": "^0.10.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
